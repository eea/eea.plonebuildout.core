 #!/bin/sh
 export LD_LIBRARY_PATH=${libevent:location}/lib

 PIDFILE=${buildout:directory}/var/memcached.pid.${conf:memcache-port}
    case "$1" in
      start)
       ${memcached:location}/bin/memcached -d -u ${conf:effective-user} -P $PIDFILE -m ${conf:memcache-size}
        ;;
      stop)
        kill `cat $PIDFILE`
        ;;
      restart|force-reload)
        $0 stop
        sleep 1
        $0 start
        ;;
      *)
        echo "Usage: $SCRIPTNAME {start|stop|restart}" >&2
        exit 1
        ;;
    esac

